<Window x:Class="AlphaHotel.Windows.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlphaHotel.Windows"
        mc:Ignorable="d"
        Title="Смена пароля" Height="308" Width="288" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <Label Content="Старый пароль" HorizontalAlignment="Left" Margin="28,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Новый пароль" HorizontalAlignment="Left" Margin="28,118,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TbOldPassword" HorizontalAlignment="Left" Margin="132,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TbNewPassword" HorizontalAlignment="Left" Margin="132,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button  x:Name="BtnChangedPassword"   Content="Изменить" HorizontalAlignment="Left" Margin="73,202,0,0" VerticalAlignment="Top" Height="23" Width="178" Click="BtnChangedPassword_Click"/>
        <TextBox x:Name="TbConfirmPassword" HorizontalAlignment="Left" Margin="132,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Подтверждение" HorizontalAlignment="Left" Margin="28,158,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
