<Window x:Class="AlphaHotel.Windows.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlphaHotel.Windows"
        mc:Ignorable="d"
        Title="AddUser" Height="377" Width="356" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="21,62,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TbLogin" HorizontalAlignment="Left" Margin="178,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="21,99,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TbPassword" HorizontalAlignment="Left" Margin="178,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="CmbRole" HorizontalAlignment="Left" Margin="178,154,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Роль" HorizontalAlignment="Left" Margin="21,151,0,0" VerticalAlignment="Top"/>
        <Label Content="Дата последнего входа" HorizontalAlignment="Left" Margin="21,189,0,0" VerticalAlignment="Top" Width="136"/>
        <DatePicker Name="DtpLastLoginDate"  HorizontalAlignment="Left" Margin="178,191,0,0" VerticalAlignment="Top" Width="120"/>
        <CheckBox  x:Name="ChkbxPassworChanges" Content="Пароль изменен" HorizontalAlignment="Left" Margin="21,231,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnAddUser" Content="Добавить" HorizontalAlignment="Center" Margin="0,278,0,0" VerticalAlignment="Top" Width="182"/>

    </Grid>
</Window>
