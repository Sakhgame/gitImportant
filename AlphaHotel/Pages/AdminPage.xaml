<Page x:Class="AlphaHotel.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlphaHotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DtGrid" DataContext="{Binding}"/>
        <Button x:Name="BtnAddUsers" Content="Добавить" HorizontalAlignment="Left" Margin="56,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="105" Click="BtnAddUsers_Click"/>
        <Button x:Name="BtnEditUsers" Content="Редактировать" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="104" Margin="207,0,0,0" Click="BtnEditUsers_Click"/>
        <Button x:Name="BtnDeleteUsers" Content="Удалить" HorizontalAlignment="Left" Margin="648,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="105" Click="BtnDeleteUsers_Click"/>


    </Grid>
</Page>
